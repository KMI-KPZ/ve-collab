<?xml version="1.0" standalone="no" ?>
<!-- Single SCO content packaging example. SCORM 1.2. -->

<!--
    User specific data:

        manifest file:
            User specific data:
            organisation:
                - Title of the course: Main title
                - Elements with identifierref pointing to resources
            resources:
                - resource_1: stepName.html (correct identifier, href)
                - resource_n: stepName2.html
        html files in folder sco: (don't have to be in a folder)
            - create html files for each step and put them in the sco folder
-->
<manifest identifier="com.scorm.golfsamples.contentpackaging.singlesco.12" version="1"
          xmlns="http://www.imsproject.org/xsd/imscp_rootv1p1p2"
          xmlns:adlcp="http://www.adlnet.org/xsd/adlcp_rootv1p2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://www.imsproject.org/xsd/imscp_rootv1p1p2 imscp_rootv1p1p2.xsd
                             http://www.imsglobal.org/xsd/imsmd_rootv1p2p1 imsmd_rootv1p2p1.xsd
                             http://www.adlnet.org/xsd/adlcp_rootv1p2 adlcp_rootv1p2.xsd">

    <!-- declares which SCORM version this course operates under.-->
    <metadata>
        <schema>ADL SCORM</schema>
        <schemaversion>1.2</schemaversion>
    </metadata>
    <!-- There is just one organization that generates a hierarchy of sco.-->
    <!--default and identifier are required attributes and have to be same (not displayed)-->
    <organizations default="test_structure">
        <organization identifier="test_structure">
            <!-- Title of the course -->
            <title>Main title</title>
            <!-- items and titles of courses with link to ressources -->
            <item identifier="item_1" identifierref="resource_1">
                <title>Element title1</title>
            </item>
            <item identifier="item_2" identifierref="resource_2">
                <title>Element title2</title>
            </item>
        </organization>
    </organizations>
    <!--
    Resources are linked via identifier to organization items (hierarchy).
    Could also be pictures and css files
    -->
    <resources>
        <resource identifier="resource_1" type="webcontent" adlcp:scormtype="asset" href="sco/MakeFriends.html">
            <file href="sco/MakeFriends.html"/>
            <dependency identifierref="common_files"/>
        </resource>
        <resource identifier="resource_2" type="webcontent" adlcp:scormtype="asset" href="sco/MakeFriends2.html">
            <file href="sco/MakeFriends2.html"/>
            <dependency identifierref="common_files"/>
        </resource>
        <!-- Common files shared by all sco (css, js files, images) -->
        <resource identifier="common_files" type="webcontent" adlcp:scormtype="asset">
            <file href="shared/scormfunctions.js"/>
        </resource>
    </resources>
</manifest>
